# AWS Mode Configuration (DynamoDB, SNS)
USE_AWS=true

# AWS Credentials
# For local development: Set credentials explicitly
# For EC2 with IAM role: Leave empty (credentials auto-injected)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# DynamoDB Table Names
DYNAMODB_USERS_TABLE=users
DYNAMODB_ACCOUNTS_TABLE=accounts
DYNAMODB_TRANSACTIONS_TABLE=transactions
DYNAMODB_NOTIFICATIONS_TABLE=notifications
DYNAMODB_AUDIT_LOG_TABLE=audit-log

# Flask Configuration
FLASK_SECRET_KEY=production-secret-key-CHANGE-THIS
FLASK_ENV=production
